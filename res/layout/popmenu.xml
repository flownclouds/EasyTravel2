<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3" >
    
    <ImageView
        android:id="@+id/iv_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_sun" />
    
    <ImageView
        android:id="@+id/iv_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_sun"
        android:layout_toRightOf="@+id/iv_sun"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_cloud" />
    
    <ImageView
        android:id="@+id/iv_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_sun"
        android:layout_below="@+id/iv_sun"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_rain" />
    
    <ImageView
        android:id="@+id/iv_snow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_rain"
        android:layout_toRightOf="@+id/iv_rain"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_snow" />
    

</RelativeLayout>
